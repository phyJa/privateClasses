{% extends "cardLayout.njk" %}

{% block pageTitle %}
    Landing
{% endblock pageTitle %}

{% block content %}
    <a class="addProfile" href="/students/create">
        + New student
    </a>
    <div class="card tableContainer">
        <table>
            <thead>
                <tr>
                    <th> Full Name </th>
                    <th> Email </th>
                    <th> School year </th>
                    <th> Actions </th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr> 
                        <td>
                            <span
                                style="background-image: url({{ student.avatar_url }})"
                            >
                            </span>
                            {{ student.name }} 
                        </td> 
                        <td class="email">
                            {{ student.email }}       
                        </td>
                        <td class="schoolYear">
                            {{ student.schoolYear }}       
                        </td> 
                        <td> 
                            <a href="/students/{{ student.id }}/show"> Show </a>  
                        </td> 
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}
